// create new cookie or get from request
const visited = parseFloat(req.signedCookies.count) || 1;
// reward probability increase rate
const increaseRate = 0.5;
// filter rewards based on reqs
const rewards = data.filter((item) => item.value < visited);
// pick random reward
const index = Math.floor(Math.random() * rewards.length);
const reward = rewards[index];

// sent the responce
res.cookie("count", visited + increaseRate, { signed: true }).json({ reward });
